.pull-sidenote-left:before{
    content:"{";
    display:inline;
}

.pull-sidenote-left:after{
    content:"}";
    display:inline;
}

.pull-sidenote-left{
    background-color: lightgoldenrodyellow;
}

.just-the-facts{
    border: 1px gray solid;
    border-radius: 7px;
    padding:.5em;
    margin:.5em;
    width:60%;
    float:right;
}

p.dropcaps:first-letter,body p:first-child:first-letter {
    font-size: 4em;
    float: left;
    padding-right: .2em;
    line-height: 1; }